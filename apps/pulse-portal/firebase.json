{
  "hosting": {
    "public": "apps/pulse-portal/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/index.html",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "destination": "https://pulse-482504.web.app/"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
